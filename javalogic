import java.io.*;
import javax.servlet.*;
import javax.servlet.http.*;

public class TrashSegregationServlet extends HttpServlet {
    private static final long serialVersionUID = 1L;

    // Arrays for trash items and their categories
    String[] items = {"Plastic Bottle", "Banana Peel", "Cardboard Box"};
    String[] categories = {"Non-Biodegradable", "Biodegradable", "Recyclable"};

    // Function to check if an item is sorted correctly
    public boolean checkSorting(String item, String bin) {
        if (item.equals("Plastic Bottle") && bin.equals("Non-Biodegradable")) {
            return true;
        } else if (item.equals("Banana Peel") && bin.equals("Biodegradable")) {
            return true;
        } else if (item.equals("Cardboard Box") && bin.equals("Recyclable")) {
            return true;
        }
        return false;
    }

    // Do POST request to handle sorting
    protected void doPost(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {
        String item = request.getParameter("item");
        String bin = request.getParameter("bin");

        boolean isSortedCorrectly = checkSorting(item, bin);

        // Example of using scanner.nextInt() to accept user input in a console (Java)
        Scanner scanner = new Scanner(System.in);
        System.out.println("Enter your score: ");
        int score = scanner.nextInt();

        // Output result to the user
        PrintWriter out = response.getWriter();
        if (isSortedCorrectly) {
            out.println("<h3>Correct! Your score is: " + score + "</h3>");
        } else {
            out.println("<h3>Incorrect! Try again.</h3>");
        }
    }
}
